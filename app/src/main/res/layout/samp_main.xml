<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/new_color1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/samp"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                android:textColor="@color/background_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/samp_tag"
                android:textColor="@color/background_color"
                android:textStyle="italic|bold"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/samp_tag1"
                android:layout_marginLeft="13dp"
                android:textColor="@color/background_color"
                android:textStyle="italic|bold"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_color"
                android:textSize="18dp"
                android:text="@string/samp_attr"
                android:layout_marginLeft="13dp"
                android:textStyle="italic|bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_color"
                android:textStyle="italic|bold"
                android:text="@string/samp_tag2"
                android:layout_marginLeft="13dp"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_color"
                android:textStyle="italic|bold"
                android:text="@string/samp_tag3"
                android:layout_marginLeft="13dp"
                android:textSize="18dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>